@import 'uno.wxss';
/* app.wxss */
page {
  /* 必须写在 page 作用域内 */
  --theme-primary: #0D9488;
  --theme-primary-hover: #0F766E;
  
  /* 也可以顺便定义 Vant 的全局主题变量，这样 Vant 组件会自动生效 */
  --button-primary-background-color: #0D9488;
  --button-primary-border-color: #0D9488;
  --toast-background-color: rgba(0, 0, 0, 0.7);
}

/* Global UI helpers */
.page-shell {
  min-height: 100vh;
  background: linear-gradient(180deg, #f7f9fc 0%, #f3f5f9 100%);
  color: #111827;
}

.ui-page {
  padding-bottom: 40rpx;
}

.ui-header {
  padding: 32rpx 32rpx 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.ui-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #0f172a;
  letter-spacing: 0.5rpx;
}

.ui-subtitle {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #94a3b8;
}

.ui-section {
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}

.ui-section-title {
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
}

.ui-card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.08);
}

.ui-card-soft {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.06);
}

.ui-hero {
  background: linear-gradient(135deg, #0d9488 0%, #14b8a6 60%, #0f766e 100%);
  color: #ffffff;
  position: relative;
  overflow: hidden;
}

.ui-muted {
  color: #94a3b8;
}

.font-numeric {
  font-family: "DIN Alternate", "Helvetica Neue", Helvetica, Arial, "Courier New", monospace;
}
.line-through {
  text-decoration: line-through; /* 设置删除线 */
}
